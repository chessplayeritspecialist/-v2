<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="80dp"
            android:background="#BFAEAE"
            android:backgroundTint="#0E34F1"
            android:gravity="center"
            android:text="бета версия"
            android:textSize="60dp"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/text_number_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:height="80dp"
            android:text="text"
            android:textSize="60dp"
            android:gravity="center"
            >
        </TextView>

        <TextView

            android:id="@+id/text_number_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="80dp"
            android:text="text"
            android:textSize="40dp"
            android:gravity="center"
            >
        </TextView>

    </LinearLayout>

        <TextView
            android:id="@+id/text_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="180dp"
            android:gravity="center"
            android:text="text"
            android:textSize="60dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:onClick="click_1"
                android:text="1"
                android:textSize="25dp">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="2"
                android:textSize="25dp"
                android:onClick="click_2"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="3"
                android:textSize="25dp"
                android:onClick="click_3"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:backgroundTint="#D33E3E"
                android:text="+"
                android:onClick="click_plus"
                android:textSize="25dp"
                app:iconTint="@color/teal_200">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="4"
                android:textSize="25dp"
                android:onClick="click_4"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="5"
                android:textSize="25dp"
                android:onClick="click_5"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="6"
                android:textSize="25dp"
                android:onClick="click_6"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:backgroundTint="#D33E3E"
                android:text="-"
                android:textSize="25dp"
                android:onClick="click_minus"
                >

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="90dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="7"
                android:textSize="25dp"
                android:onClick="click_7"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="8"
                android:textSize="25dp"
                android:onClick="click_8"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="9"
                android:textSize="25dp"
                android:onClick="click_9"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="x"
                android:textSize="25dp"
                android:backgroundTint="#D33E3E"
                android:onClick="click_x"
                >

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:backgroundTint="#508711"
                android:text="="
                android:textSize="25dp"
                android:onClick="click_r"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text="0"
                android:textSize="25dp"
                android:onClick="click_0"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:backgroundTint="#E8D953"
                android:text="c"
                android:textSize="25dp"
                android:onClick="click_c"
                >

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="90dp"
                android:text=":"
                android:textSize="25dp"
                android:backgroundTint="#D33E3E"
                android:onClick="click_delenie"
                >

            </Button>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>